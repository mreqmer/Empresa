@using Ejercicio04.Models.ENT
@model ClsPersona


    <!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Datos</title>
</head>
<body>
    <h1>Información de la Persona</h1>
    <br />
    <p><strong>Nombre: </strong> @Model.Nombre </p>
        <p><strong>Apellido: </strong> @Model.Apellido </p>
        <p><strong>Edad: </strong> @Model.Edad </p>
        <p><strong>Departamento: </strong> @Model.IdDepartamento</p>
        @using (Html.BeginForm("EditarPersona", "Home", FormMethod.Post))
        {
        @Html.HiddenFor(model => model.Nombre)
        @Html.HiddenFor(model => model.Apellido)
        @Html.HiddenFor(model => model.Edad)
        @Html.HiddenFor(model => model.IdDepartamento)
            <input type="submit" name="button" class="button1" value="Editar" />
        }
           
</body>
</html>


